extends ../layouts/index

block contenido
  div(class="max-w-5xl mx-auto mt-10")

    h1.text-center.text-4xl.text-gray-600.font-bold.border-b-2.border-gray-300.py-2.my-2=pagina

    form(clas="space-y-5 bg-white")

      h2(class="text-center mt-10 font-bold text-gray-600 text-2xl") Ticket a Trabajar
      div(class="flex  gap-4 mt-10 bg-white rounded-lg shadow-md")

        div(class="w-1/3") 
          label(for="id_ticket" class="text-sm font-bold text-gray-600 md:text-lg") ID Ticket
          input(type="text" name="id_ticket" id="id_ticket" class="border-2 border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500" )

        div(class=" w-1/3") 
          label(for="id_user_creador" class="text-sm font-bold text-gray-600 md:text-lg ") Ticket Creado
          input(type="text" name="id_user_creador" id="id_user_creador" class="border-2 border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500" )
        div(class=" w-1/3") 
          label(for="id_user_asignado" class="text-sm font-bold text-gray-600 md:text-lg ") Usuario Asignado
          input(type="text" name="id_user_asignado" id="id_user_asignado" class="border-2 border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500")

      div.mt-5
        label(for="comentario" class="text-lg font-bold text-gray-600") Comentario
        textArea(name="id_user_asignado" id="id_user_asignado" class="border-2 border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Escribe tu comentario aqu√≠...")

      div.mt-5
        button(type="submit" class="hover:bg-red-600 bg-red-500 mx-5 text-white font-bold px-4 py-2 rounded-md shadow-md") Pendiente
        button(type="submit" class="hover:bg-gray-600 bg-gray-500  mx-5 text-white font-bold px-4 py-2 rounded-md shadow-md") Desclinado
        button(type="submit" class="hover:bg-green-600 bg-green-500 mx-5 text-white font-bold px-4 py-2 rounded-md shadow-md")  Completado