extends ../layouts/index

block contenido
  .pt-10
    h1.text-center.font-bold.text-4xl.my-10.text-gray-500 Ges
      span.text-red-700 Tick
    h2.text-2xl.font-bold.mb-6.text-center=pagina

    if errores
      div(id="errores" class=" max-w-md mx-auto mt-5 ")
        each error in errores
          p(class="bg-red-600 rounded-lg text-white text-sm font-bold text-center py-2 my-2 ")=error.msg

  .mx-auto.max-w-md.mt-8
    .bg-white.p-6.rounded.shadow-md
      form(class="space-y-5" action="/auth/login" method="POST")
        input(type="hidden" name="_csrf" value=csrfToken)
        div
          label(for='identificador' class="block text-lg font-semibold text-gray-700") Email / Usuario
          input(type="text" name="identificador" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md outline-red-200" placeholder="Ingrese tu email o usuario" autocomplete="on" value= usuario ? usuario.identificador : "")

        div
          label(for='password' class="block text-lg font-semibold text-gray-700") Contraseña
          input(type="password" name="password" id="password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md outline-red-200" placeholder="Ingrese tu contraseña")

          div.mt-2.flex.items-center
            input(type="checkbox" name="remember" id="remember" class="mr-1")
            label(for="remember" class="font-semibold text-sm mb-1 capitalize") recordarme

        div.flex.justify-between.itmes-center
          //- a(href="/auth/registrar" class="text-sm text-gray-400 font-semibold hover:text-red-700") ¿No tienes cuenta? Crea una
          a(href="/auth/olvidar-password" class="text-sm text-gray-400 font-semibold hover:text-red-700") ¿Olvisdate tu contraseña?

        button(type="submit" class="bg-gray-700 text-lg text-white rounded-md px-5 py-2 my-5 w-full hover:bg-gray-800 ") Iniciar Sesión


