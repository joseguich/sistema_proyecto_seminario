extends ../layouts/index

block contenido
  .pt-10
    h1.text-center.font-bold.text-4xl.my-10.text-gray-500 Ges
      span.text-red-700 Tick
    h2.text-2xl.font-bold.mb-6.text-center=pagina
    if errores
      div(id="errores" class=" max-w-md mx-auto mt-5 ")
        each error in errores
          p(class="bg-red-600 rounded-lg text-white text-sm text-center py-2 my-2 ")=error.msg

  .mx-auto.max-w-md.mt-8
    .bg-white.p-6.rounded.shadow-md
      form(class="space-y-6" action="/auth/olvidar-password" method="POST")
        input(type="hidden", name="_csrf" value=csrfToken)
        .mb-4
          label(for='identificador' class="block text-lg font-semibold text-gray-700") Email / Usuario
          input(type="text" name="identificador" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md outline-none" placeholder="Ingrese tu email o usuario" value=usuario ? usuario.identificador : "")

        .mb-4.flex.justify-between.items-center
          a(href="/auth/registrar" class="text-sm text-gray-400 font-semibold hover:text-red-700") ¿No tienes cuenta? Crea una
          a(href="/auth/login" class="text-sm text-gray-400 font-semibold hover:text-red-700") ¿Ya tienes cuenta? Iniciar Sesíon

        button(type="submit" class="bg-gray-700 text-lg text-white rounded-md px-5 py-2 my-5 w-full hover:bg-gray-800 ") Enviar Instruciones




